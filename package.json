{
  "name": "hotel-middle-earth",
  "version": "2.0.0",
  "description": "An immersive browser-based game set in the Middle Earth universe where you collect visitors, make strategic choices, and aim for the highest score.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "firebase": "^10.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "game",
    "typescript",
    "middle-earth",
    "lotr",
    "browser-game",
    "portfolio"
  ],
  "author": "Utku Cikmaz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/utkucikmaz/Hotel-Middle-Earth"
  }
}
